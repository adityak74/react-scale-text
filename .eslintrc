{
  "extends": "eslint-config-airbnb",
  "env": {
    "browser": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "comma-dangle": 0,
    "brace-style": ["error", "stroustrup", { "allowSingleLine": true }]
  },
  "plugins": [
    "react"
  ]
}
